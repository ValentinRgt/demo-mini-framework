        <div class="alert alert-{{ app.flashes.type }}">
            {{ app.flashes.message }}
        </div>
    {% endif %}

    <h1>Login</h1>
    <a href="{{ path('default') }}">Home Page</a>
    <form method="post" action="{{ path('login.post') }}">
        <div class="form-group">
            <label>email (john.doe@john.com)</label>
            <input type="email" class="form-control" name="email">
        </div>

        <div class="form-group">
            <label>password (john.doe)</label>
            <input type="password" class="form-control" name="password">
        </div>

        <button class="btn btn-primary btn-block mt-5">Login</button>
    </form>
{% endblock %}